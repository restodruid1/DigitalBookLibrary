        */

        // Send image file to the server
        fetch("http://localhost:3000/api/booksAPI/addBookImage", {
            method: 'POST',
            body: formData
        })
            .then((res) => console.log(res))
            .catch((err) => console.log("Error occured", err));
    }
</script>
