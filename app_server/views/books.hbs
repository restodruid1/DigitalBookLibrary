<h1>My Book</h1>
<div class="book-container">  
        {{#each userData}}
            {{#each books}}
                {{#if (eq title "Default Title")}}
                {{else}} 
                    <div class="book">
                    <p class="book-title">{{title}}</p>
                    <img src="{{image}}" alt="{{title}}">
                    <p class="book-author">By {{author}}</p>
                    </div>
                {{/if}}             
            {{/each}}
        {{/each}}
        <div class="add-book">
        <img src="uploads/default/addbook.png">
        </div>      
</div>
